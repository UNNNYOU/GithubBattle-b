<div class="container m-auto min-h-screen">
  <div class="text-gray-700 mb-10">
    <div class="text-center text-2xl xl:text-4xl mt-10">
      <h1>RESULT</h1>
    </div>
    <div class="text-center text-4xl xl:text-8xl mt-4">
      <% if current_user.contributions > @user.contributions%>
        <h1>勝ち</h1>
      <% elsif current_user.contributions == @user.contributions %>
        <h1>引き分け</h1>
      <% else %>
        <h1>負け</h1>
      <%end%>
    </div>
    <div class="flex flex-wrap justify-around items-center">
      <div class="relative mr-4 mt-4 w-60 md:w-80 2xl:w-96 flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
        <div class="relative mx-4 mt-4 h-48 md:h-64 2xl:h-72 overflow-hidden rounded-xl bg-white bg-clip-border text-gray-700 shadow-lg">
          <%= image_tag  "UserImage.png", class: "items-center" %>
        </div>
        <p class="text-center mt-2 mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
          <%= current_user.name %>
        </p>
        <p class="text-center mt-2 mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
          <%= current_user.contributions == 0 ? "戦闘力#{current_user.contributions}" : "戦闘力#{current_user.contributions}万"%>
        </p>
      </div>
      <div class="relative flex mr-4 mt-4 w-60 md:w-80 2xl:w-96 flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
        <div class="relative mx-4 mt-4 h-48 md:h-64 2xl:h-72 overflow-hidden rounded-xl bg-white bg-clip-border text-gray-700 shadow-lg">
          <%= image_tag  "UserImage.png", class: "items-center" %>
        </div>
        <p class="text-center mt-2 mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
          <%= @user.name%>
        </p>
        <p class="text-center mt-2 mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
          <%= @user.contributions == 0 ? "戦闘力#{@user.contributions}" : "戦闘力#{@user.contributions}万" %>
        </p>
      </div>
      <div class="w-full">
        <%= link_to "戻る", users_path, class: "text-white flex justify-center text-center w-2/6 2xl:w-[30rem] mt-16 m-auto transform rounded-sm bg-green-600 py-4 font-bold duration-300 hover:bg-green-400" %>
      </div>
    </div>
  </div>
</div>